<MudTable Items="@OrderPositions" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>Product</MudTh>
        <MudTh>Quantity</MudTh>
        <MudTh>ProductPrice</MudTh>
        <MudTh>TotalPrice</MudTh>
        <MudTh>Discount</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.ProductName</MudTd>
        <MudTd>@context.Quantity</MudTd>
        <MudTd>@context.ProductPrice</MudTd>
        <MudTd>@context.TotalPrice</MudTd>
        <MudTd>@context.CalculateGivenDiscount().ToString("P")</MudTd>
    </RowTemplate>
</MudTable>