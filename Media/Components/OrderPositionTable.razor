<MudTable Items="@OrderPositions" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>ProductId</MudTh>
        <MudTh>Quantity</MudTh>
        <MudTh>ProductPrice</MudTh>
        <MudTh>TotalPrice</MudTh>
        <MudTh>Discount</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.ProductId.Value</MudTd>
        <MudTd>@context.OrderDescription.Quantity</MudTd>
        <MudTd>@context.OrderDescription.EffectivePrice</MudTd>
        <MudTd>@context.ProductBookUnitPrice.Value</MudTd>
    </RowTemplate>
</MudTable>